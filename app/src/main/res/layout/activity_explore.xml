<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="exploreVM" type="com.livechat.app.modules.explore.data.viewmodel.ExploreVM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_20pxv"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_width="@dimen/_19pxh" android:src="@drawable/img_drawer_icon"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtExplore"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_weight="0.31"
                    android:layout_width="0dp"
                    android:text="@{exploreVM.exploreModel.txtExplore}"
                    style="@style/textStylePoppinssemibold24" tools:text="@string/lbl_explore"/>
                <ImageView android:id="@+id/image1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_21pxv"
                    android:layout_marginStart="@dimen/_50pxh"
                    android:layout_width="@dimen/_20pxh" android:src="@drawable/img_notification_icon"/>
                <ImageView android:id="@+id/image2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_20pxv"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_width="@dimen/_20pxh" android:src="@drawable/img_search_icon"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_115pxv"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linear2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <EditText
                    android:background="@drawable/rectangle_bg_black_900_63_radius_10"
                    android:fontFamily="@font/poppins"
                    android:gravity="center|start"
                    android:hint="@string/lbl_search"
                    android:id="@+id/etSearch"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_13pxv"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_14pxv"
                    android:singleLine="true"
                    android:text="@={exploreVM.exploreModel.etSearchValue}"
                    android:textColor="@color/gray_700"
                    android:textColorHint="@color/gray_700"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14sp" android:textStyle="normal"/>
                <LinearLayout android:id="@+id/linear3"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_marginTop="@dimen/_22pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStyle">
                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/btnScience"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_40pxv"
                        android:layout_width="@dimen/_83pxh"
                        android:text="@string/lbl_science"
                        android:textAllCaps="false"
                        style="@style/textStylePoppinsregular14" tools:text="@string/lbl_science"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/btnLoremIpsum"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_40pxv"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_width="@dimen/_125pxh"
                        android:text="@string/lbl_lorem_ipsum"
                        android:textAllCaps="false"
                        style="@style/textStylePoppinsregular14" tools:text="@string/lbl_lorem_ipsum"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:gravity="center"
                        android:id="@+id/btnDesign"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_40pxv"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_width="@dimen/_83pxh"
                        android:text="@string/lbl_design"
                        android:textAllCaps="false"
                        style="@style/textStylePoppinsregular14" tools:text="@string/lbl_design"/>
                    <TextView android:gravity="center|end"
                        android:id="@+id/txtTechnology"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_weight="0.09"
                        android:layout_width="0dp"
                        android:paddingBottom="@dimen/_9pxv"
                        android:paddingTop="@dimen/_9pxv"
                        android:text="@{exploreVM.exploreModel.txtTechnology}"
                        style="@style/textStylePoppinsregular14" tools:text="@string/lbl_technology"/>
                </LinearLayout>
                <View android:background="@color/gray_400"
                    android:id="@+id/line"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_25pxv" android:layout_width="@dimen/_375pxh"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtRecommendedFor"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:layout_width="match_parent"
                    android:text="@{exploreVM.exploreModel.txtRecommendedFor}"
                    style="@style/textStylePoppinssemibold14" tools:text="@string/msg_recommended_for"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    itemSpace="@{@dimen/_20pxh}"
                    style="@style/groupStyle" tools:itemCount="3" tools:listitem="@layout/row_explore1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
