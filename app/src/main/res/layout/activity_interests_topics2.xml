<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="interestsTopics2VM" type="com.livechat.app.modules.intereststopics2.data.viewmodel.InterestsTopics2VM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_20pxv"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_width="@dimen/_19pxh" android:src="@drawable/img_drawer_icon"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtInterests"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_weight="0.35"
                    android:layout_width="0dp"
                    android:text="@{interestsTopics2VM.interestsTopics2Model.txtInterests}"
                    style="@style/textStylePoppinssemibold24" tools:text="@string/lbl_interests"/>
                <ImageView android:id="@+id/image1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_21pxv"
                    android:layout_marginStart="@dimen/_50pxh"
                    android:layout_width="@dimen/_20pxh" android:src="@drawable/img_notification_icon"/>
                <ImageView android:id="@+id/image2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_20pxv"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_width="@dimen/_20pxh" android:src="@drawable/img_search_icon"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linear2"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_27pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_50pxh"
                android:layout_width="match_parent"
                app:tabIndicatorColor="@color/light_blue_A200"
                app:tabIndicatorHeight="@dimen/_4pxv"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/black_900" app:tabTextColor="@color/black_900"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25pxv" android:layout_width="match_parent"/>
        </LinearLayout>
        <View android:background="@color/gray_400"
            android:id="@+id/line"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginBottom="@dimen/_645pxv" android:layout_width="@dimen/_375pxh"/>
    </LinearLayout>
</layout>
